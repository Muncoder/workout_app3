<%= form_for(@exercise) do |f| %>
	
	<% if @exercise.errors.any? %>
		<h4>Following errors stopping to create new exercise</h4>
		<ul>
			<% @exercise.errors.full_messages.each do |error_msg| %>
				<li><%= error_msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<%= f.label :duration_in_min %>
		<%= f.text_field :duration_in_min, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :workout %>
		<%= f.text_area :workout, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :workout_date %>
		<%= f.text_field :workout_date, class: "form-control", id: "datepicker" %>
	</div>
	
	<% if params[:action] == "new" %>
		<%= f.submit "Create Exercise", class: "btn btn-success" %>	
	<% else %>
		<%= f.submit "Update Exercise", class: "btn btn-info" %>	
	<% end %>

<% end %>

<script>
	$(document).ready(function(){
		$('#datepicker').datepicker();
	});
</script>