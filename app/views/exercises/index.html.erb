<div class="panel panel-default">
	<div class="panel-heading">
		<h1>All Exercises</h1>
	</div>
	<div class="panel-body">
		<table class="table-bordered table-striped table-condensed">
			<thead>
				<tr>
					<th>Duration in Min</th>
					<th>Work</th>
					<th>Workout Date</th>
					<th colspan="3" class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @exercises.each do |exercise| %>
					<tr>
						<td><%= exercise.duration_in_min %></td>
						<td><%= exercise.workout %></td>
						<td><%= exercise.workout_date %></td>
						<td>
							<%= link_to "Show", exercise_path(exercise), class: "btn btn-xs btn-info" %>
						</td>
						<td>
							<%= link_to "Edit", edit_exercise_path(exercise), class: "btn btn-xs btn-success" %>
						</td>
						<td>
							<%= link_to "Delete", exercise_path(exercise), method: :delete, data: {confirm: "Sure to Delete?" }, class: "btn btn-xs btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="panel-footer">
		<%= link_to "New Exercise", new_exercise_path, class: "btn btn-success" %>
	</div>
</div>
